@model List<Player>

<h2>Players</h2>
<table class="table">
    <thead>
        <tr>
            <th>Token</th>
            <th>Username</th>
            <th>Last Activity</th>
            <th>Friends</th>
            <th>Requests</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td><a asp-action="Profile" asp-route-token="@player.Token" style="text-decoration: none; color: inherit;">@player.Token</a></td>
                <td>@player.Username</td>
                <td>@player.LastActivity</td>
                <td>
                    @if (player.Friends.Count > 0)
                    {
                        @foreach (var friend in player.Friends)
                        {
                            <a asp-action="Profile" asp-route-token="@friend" style="text-decoration: none; color: inherit;">
                                @friend
                            </a>

                            @(friend != player.Friends.Last() ? ", " : "")
                        }
                    }
                    else
                    {
                        <span>empty</span>
                    }
                </td>
                <td>
                    @foreach (var request in player.Requests)
                    {
                        <div><a asp-action="Profile" asp-route-token="@request.Username" style="text-decoration: none; color: inherit;">@request.Username</a> - @request.Type - @request.Date</div>
                    }
                    @(player.Requests.Count <= 0 ? "empty" : "")
                </td>
            </tr>
        }
    </tbody>
</table>
