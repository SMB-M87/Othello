@model IEnumerable<MVC.Models.Player>

<h2>All Players</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Last Activity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.Username</td>
                <td>@player.LastActivity</td>
                <td>
                    <a asp-action="EditPlayer" asp-route-id="@player.Token" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="DeletePlayer" asp-route-id="@player.Token" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>