@model MVC.Models.Player

<h2>Delete Player</h2>

<div>
    <h4>Are you sure you want to delete this player?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Online Status</dt>
        <dd class="col-sm-10">@Model.LastActivity</dd>
    </dl>

    <form asp-action="DeletePlayerConfirmed" method="post">
        <input type="hidden" asp-for="Token" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Players" class="btn btn-secondary">Cancel</a>
    </form>
</div>