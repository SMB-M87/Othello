@{
    ViewData["Title"] = "Create Game";
}
<div class="d-flex justify-content-center">
    <h2>Create a new game</h2>
</div>

<div class="form-group d-flex justify-content-center">
    <label>Description</label>
</div>
<div class="d-flex justify-content-center">
    <form asp-action="Create" method="post" style="height: 200px; width: 600px; padding: 10px;">
        @Html.AntiForgeryToken()
        <div class="form-group d-flex justify-content-center">
            <textarea name="description" class="form-control" required minlength="20" maxlength="120">I wanna play a game and don't have any requirements!</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Create Game</button>
        </div>
    </form>
</div>