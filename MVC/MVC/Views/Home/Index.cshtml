@model MVC.Models.HomeView

@{
    ViewData["Title"] = "Home Page";
}

@if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated)
{
    <div class="text-center" style="font-size: 48px; margin-top: 20px;">
        <h3>@Model.Stats</h3>
    </div>

    <div class="row">
        <!-- Match History Column, reduced width to fit everything in one row -->
        <div class="col-md-3">
            <h3>Match History</h3>
            @if (Model.MatchHistory != null && Model.MatchHistory.Count > 0)
            {
                <table class="table table-sm" style="table-layout: fixed; width: 100%;">
                    <colgroup>
                        <col style="width: 30%;" />
                        <col style="width: 70%;" />
                    </colgroup>
                    <tbody>
                        @foreach (var game in Model.MatchHistory)
                        {
                            <tr>
                                <td>
                                    @if (User.Identity.Name == game.Winner)
                                    {
                                        <span>Won</span>
                                    }
                                    else if (User.Identity.Name == game.Loser)
                                    {
                                        <span>Lost</span>
                                    }
                                    else
                                    {
                                        <span>Draw</span>
                                    }
                                </td>
                                <td>
                                    @if (User.Identity.Name == game.Winner)
                                    {
                                        <span>@game.Loser</span>
                                    }
                                    else if (User.Identity.Name == game.Loser)
                                    {
                                        <span>@game.Winner</span>
                                    }
                                    else
                                    {
                                        <span>@game.Draw</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>You have no match history.</p>
            }
        </div>

        <!-- Online Players Column, reduced space between name and button -->
        <div class="col-md-3">
            <h3>Online</h3>
            <div style="height: 200px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px;">
                @if (Model.OnlinePlayers != null && Model.OnlinePlayers.Count > 0)
                {
                    <ul style="list-style: none; padding-left: 0;">
                        @foreach (var player in Model.OnlinePlayers)
                        {
                            <li style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                                <span>@player</span>
                                @if (!Model.Friends.Contains(player) && !Model.SentRequests.Contains(player))
                                {
                                    <form method="post" asp-action="SendFriendRequest" asp-controller="Home" style="display: inline;">
                                        <input type="hidden" name="username" value="@player" />
                                        <button type="submit" class="btn btn-link p-0" style="font-size: 16px; margin-left: 5px;">✔</button>
                                    </form>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No players online.</p>
                }
            </div>
        </div>

        <!-- Friends Column, reduced space between name and button -->
        <div class="col-md-3">
            <h3>Friends</h3>
            <div style="height: 200px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px;">
                @if (Model.Friends != null && Model.Friends.Count > 0)
                {
                    <ul style="list-style: none; padding-left: 0;">
                        @foreach (var player in Model.Friends)
                        {
                            <li style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                                <span>@player</span>
                                <form method="post" asp-action="DeleteFriend" asp-controller="Home" style="display: inline;">
                                    <input type="hidden" name="username" value="@player" />
                                    <button type="submit" class="btn btn-link p-0" style="font-size: 16px; margin-left: 5px;">✖</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>You have no friends added.</p>
                }
            </div>
        </div>

        <!-- Requests Column, placed buttons next to each other -->
        <div class="col-md-3">
            <h3>Requests</h3>
            <div style="height: 200px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px;">
                @if (Model.PendingRequests != null && Model.PendingRequests.Count > 0)
                {
                    <ul style="list-style: none; padding-left: 0;">
                        @foreach (var request in Model.PendingRequests)
                        {
                            <li style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                                <span>@request</span>
                                <div>
                                    <form method="post" asp-action="AcceptFriendRequest" asp-controller="Home" style="display: inline;">
                                        <input type="hidden" name="username" value="@request" />
                                        <button type="submit" class="btn btn-link p-0" style="font-size: 16px; margin-right: 5px;">✔</button>
                                    </form>
                                    <form method="post" asp-action="DeclineFriendRequest" asp-controller="Home" style="display: inline;">
                                        <input type="hidden" name="username" value="@request" />
                                        <button type="submit" class="btn btn-link p-0" style="font-size: 16px;">✖</button>
                                    </form>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No pending friend requests.</p>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
}
