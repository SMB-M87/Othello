@using System.Security.Claims
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Waiting for Opponent";
    var token = Model;
}

<div class="d-flex justify-content-center">
    <h2>Waiting for an Opponent...</h2>
</div>

<div id="loading" class="d-flex justify-content-center">
    <img src="~/images/loading.gif" alt="Loading..." />
</div>

<div class="d-flex justify-content-center">
    <p>Waiting for an opponent to join...</p>
</div>

<div class="d-flex justify-content-center">
    <form method="post" asp-action="DeleteGame">
        <input type="hidden" name="token" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
        <button type="submit" class="btn btn-danger">Cancel Game</button>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<<script>
    $(document).ready(function () {
        var token = '@token';
        var playGameUrl = '@Url.Action("PlayGame", "Game")' + '?token=' + encodeURIComponent(token);

        var checkInterval = setInterval(function () {
            $.ajax({
                url: '@Url.Action("CheckGameStatus", "Game")',
                type: 'GET',
                data: { token: token },
                success: function (data) {
                    if (data.started) {
                        clearInterval(checkInterval);
                        window.location.href = playGameUrl;
                    }
                }
            });
        }, 3000);
    });
</script>
